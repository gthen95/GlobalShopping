
@{
    ViewData["Title"] = "Confirmación de Email";
    Layout = "_LayoutWithNothing";
}


<body class="hold-transition login-page">
<div class="login-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="../../index2.html" class="h1"><b>Global</b>Shopping</a>
    </div>
    
    <div class="card-body">
        <h2>@ViewData["Title"]</h2>
      <p class="login-box-msg">Gracias por confirmar el email, ahora puedes iniciar sesión en el sistema..</p>

      <p class="mt-3 mb-1">
          <a asp-action="Login" >Login</a>
      </p>
    </div>
  </div>
</div>
</body>

@section Scripts {
	@{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
	}