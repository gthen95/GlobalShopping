@model IEnumerable<GlobalShopping.Models.ProductsHomeViewModel>

@{
	ViewData["Title"] = "Index";
}


<div class="content-wrapper">

	<section class="content">
		<div class="container-fluid">
			<br />
			@foreach (var item in Model)
			{


				<div class="row">
					<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
						@if (item.Product1 != null)
						{
							<div class="card bg-light d-flex flex-fill">
								<div class="card-header text-muted border-bottom-0">
									<h2 class="lead"><b>@item.Product1.Name</b></h2>
								</div>	
								<div class="card-body">

								  <div class="row">
									<div class="col-7">
										 <p class="text-muted text-md"><b>Descripción: </b> @item.Product1.Description </p>
										 <ul class="ml-4 mb-0 fa-ul text-muted">
											<li class="medium"><span class="fa-li"><i class="fa-solid fa-coins"></i></span> <b>Precio: </b> @Html.DisplayFor(modelItem => item.Product1.Price)</li>
											<li class="medium"><span class="fa-li"><i class="fa-solid fa-box"></i></span> <b>Inventario: </b> @Html.DisplayFor(modelItem => item.Product1.Stock)</li>
										 </ul>
									</div>
									<div class="col-5 text-center">
										<img src="@item.Product1.ImageFullPath" style="height:150px; max-width:280px;" />
									</div>
								  </div>
								</div>
								<div class="card-footer">
									<div class="text-right">
										<a asp-action="Add" asp-route-id="@item.Product1.Id" class="btn btn-sm bg-teal">
											<i class="fa-solid fa-cart-plus"></i>
										</a>
										<a asp-action="Details" asp-route-id="@item.Product1.Id" class="btn btn-sm btn-primary">
											<i class="fas fa-user"></i> Detalles
										</a>
									</div>
								</div>
						
							</div>
						}
					</div>

					<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
						@if (item.Product2 != null)
						{
							<div class="card bg-light d-flex flex-fill">
								<div class="card-header text-muted border-bottom-0">
									<h2 class="lead"><b>@item.Product2.Name</b></h2>
								</div>	
								<div class="card-body">

								  <div class="row">
									<div class="col-7">
										 <p class="text-muted text-md"><b>Descripción: </b> @item.Product2.Description </p>
