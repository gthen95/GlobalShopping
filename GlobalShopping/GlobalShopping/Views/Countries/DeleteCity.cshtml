@model GlobalShopping.Data.Entities.City

@{
	ViewData["Title"] = "Delete";
}


<div class="content-wrapper">
	<section class="content-header">

		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Eliminar</h1>
				</div>
			</div>
		</div>

		<div class="container-fluid">
			<div class="card">
				<div class="card-body">
					<div class="col-12">

						<h3>Esta seguro de querer borrar?</h3>
						<div>
							<partial name="_CityDetails" />
						</div>
						<div>
							<form asp-action="DeleteCity">
								<input type="hidden" asp-for="Id" />
								<input type="submit" value="Borrar" class="btn btn-outline-danger" />
								<a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-outline-success">Regresar</a>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

</div>
